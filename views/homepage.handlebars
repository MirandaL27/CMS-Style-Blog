<ol class="post-list">
    {{#each blogPosts as |post|}}
    <li>
        <article class="post">
            <div class="title">
                <h3>{{post.title}}</h3>
            </div>
            <div class="content">
                <p>{{post.post_content}}</p>
                <a href="/post/{{id}}">{{comments.length}} comments</a>
            </div>
        </article>
    </li>
    {{/each}}
</ol>