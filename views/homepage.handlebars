<div class="blog-wrapper">
    <h2>All Posts:</h2>
    {{#each blogPosts as |post|}}
    <article class="post">
        <div class="title-wrapper">
            <div class="title">
                <h3>{{post.title}}</h3>
            </div>
            <div class="details">
                {{#if post.user.user_name}}
                <p>Created by: {{post.user.user_name}} on {{date_formatting post.created_at}}</p>
                {{else}}
                <p>Created by: Unknown on {{date_formatting post.created_at}}</p>
                {{/if}}
            </div>
        </div>
        <div class="comments">
            <p>{{comments.length}} {{plural_formatting "comment" comments.length}} </p>
        </div>
        <div class="content">
            <a class="post-details" href="/post/{{id}}">Post Details</a>
        </div>
    </article>
    {{/each}}
</div>