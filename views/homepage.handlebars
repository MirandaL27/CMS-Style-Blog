
    {{#each blogPosts as |post|}}
        <article class="post">
            <div class="title">
                <h3>{{post.title}}</h3>
            </div>
            <div class="content">
                <a href="/post/{{id}}">Post Details</a>
                <p>{{comments.length}} comment(s)</p>
            </div>
            <div>
                <p> Created on: {{post.created_at}}</p>
            </div>
        </article>
    {{/each}}
