
<section>
    <h2>Create A New Post: </h2>
    <form class="new-post-form">
    <div>
      <label for="post-title">Title:</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div>
      <label for="post-content">Content:</label>
      <textarea id="post-content" name="post-content"></textarea>
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</section>

{{#if blogPosts.length}}
<section>
    <h2>Your Posts: </h2>
        {{#each blogPosts as |post|}}
            <article class="post">
              <div class="title">
                <h3>{{post.title}}</h3>
              </div>
              <div class="content">
                <p>{{post.post_content}}</p>
                <p>{{comments.length}} comment(s)</p>
                {{#if post.user.user_name}}
                <p>Created by {{post.user.user_name}} on {{post.created_at}}</p>
                {{else}}
                <p>Created by unknown on {{post.created_at}}</p>
                {{/if}}
              </div>
              <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
              <a href="/post/{{id}}">Post details</a>
            </article>
        {{/each}}
</section>
{{/if}}

<script src="/javascript/newPost.js"></script>