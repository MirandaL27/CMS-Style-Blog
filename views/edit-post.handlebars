<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2>
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div>
        <label for="post-title">title:</label>
      <input class="post-title" name="post-title" type="text" value="{{blogPost.title}}" />
      <label for="post-content">Content:</label>
      <textarea class="post-content" name = "post-content" >{{blogPost.post_content}}</textarea>
    </div>
    <button type="submit">Save post</button>
    <button type="button" class="delete-post-btn">Delete post</button>
  </form>
</article>

<div class="comment-wrapper">
  <h2>Comments:</h2>
  <div class="comments">
    {{#each blogPost.comments as |comment|}}
    <section class="comment">
      <div class="text">
        {{comment.comment_content}}
      </div>
      <div class="content">
        {{blogPost.user.user_name}} on {{date_formatting comment.created_at}}
      </div>
      <form class="delete-comment-form" id="id-{{comment.id}}">
        <button class="delete-comment-btn">Delete</button>
      </form>
    </section>
    {{/each}}
  </div>
</div>

<script src="/javascript/editPost.js"></script>
<script src="/javascript/deletePost.js"></script>